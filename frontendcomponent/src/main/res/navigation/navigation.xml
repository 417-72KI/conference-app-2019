<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/main"
    >

    <fragment
        android:id="@+id/main"
        android:name="io.github.droidkaigi.confsched2019.ui.MainFragment"
        android:label="@string/session_label"
        tools:layout="@layout/activity_main"
        >
        <action
            android:id="@id/action_session_to_session_detail"
            app:destination="@id/session_detail"
            />
    </fragment>
    <fragment
        android:id="@id/session_detail"
        android:name="io.github.droidkaigi.confsched2019.session.ui.SessionDetailFragment"
        android:label="@string/session_label"
        tools:layout="@layout/fragment_all_sessions"
        >
        <argument
            android:name="session"
            app:argType="string"
            />
    </fragment>
    <fragment
        android:id="@+id/session_day"
        android:name="io.github.droidkaigi.confsched2019.session.ui.DaySessionsFragment"
        android:label="@string/session_label"
        tools:layout="@layout/fragment_sessions"
        >
        <argument
            android:name="day"
            app:argType="integer"
            />
    </fragment>
    <fragment
        android:id="@+id/session_favorite"
        android:name="io.github.droidkaigi.confsched2019.session.ui.FavoriteSessionsFragment"
        android:label="@string/session_label"
        tools:layout="@layout/fragment_sessions"
        />
</navigation>
