<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/about_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!--TODO: Need background and logo content -->

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@color/gray3"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/what_is_droidkaigi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_what_is_droidkaigi"
            android:textStyle="bold"
            android:textColor="@color/gray1"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <TextView
            android:id="@+id/description_droidkaigi_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_description_droidkaigi"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/gray1"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/what_is_droidkaigi_text" />

        <!--TODO: Need links to video libraries -->

        <ImageView
            android:id="@+id/video_library_image_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_video_library_gray2_24dp"
            android:contentDescription="@null"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_droidkaigi_text"/>

        <ImageView
            android:id="@+id/video_library_image_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_video_library_gray2_24dp"
            android:contentDescription="@null"
            app:layout_constraintStart_toEndOf="@+id/video_library_image_1"
            app:layout_constraintTop_toTopOf="@+id/video_library_image_1"
            />

        <ImageView
            android:id="@+id/video_library_image_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_video_library_gray2_24dp"
            android:contentDescription="@null"
            app:layout_constraintStart_toEndOf="@+id/video_library_image_2"
            app:layout_constraintTop_toTopOf="@+id/video_library_image_1"
            />

        <ImageView
            android:id="@+id/video_library_image_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_video_library_gray2_24dp"
            android:contentDescription="@null"
            app:layout_constraintStart_toEndOf="@+id/video_library_image_3"
            app:layout_constraintTop_toTopOf="@+id/video_library_image_1"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
